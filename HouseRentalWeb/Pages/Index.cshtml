@page
@{
    Layout = "_Layout";
}
<section class="hero">
    <div class="hero-icon">
        <i class="bi bi-house-door-fill"></i>
    </div>
    <h1>Find Your Perfect <span>Home</span></h1>
    <p>Connect with property owners and discover rental homes that match your lifestyle. Simple, secure, and hassle-free.</p>

    <div class="mt-4">
        <a href="/Owners/Register" class="btn btn-primary me-2">Get Started</a>
        <a href="/Properties/List" class="btn btn-outline-secondary">Browse Properties</a>
    </div>
</section>

<section class="feature-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-person-lines-fill"></i></div>
                    <h5>For Tenants</h5>
                    <p>Browse verified listings and connect directly with property owners.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-building"></i></div>
                    <h5>For Owners</h5>
                    <p>List your properties and manage rental requests efficiently.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-shield-lock"></i></div>
                    <h5>Secure & Trusted</h5>
                    <p>Report system issues and enjoy admin oversight for a safe experience.</p>
                </div>
            </div>
        </div>
    </div>
</section>
