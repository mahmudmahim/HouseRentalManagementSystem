@page
@await Html.PartialAsync("_Preloader")
@model HouseRentalWeb.Pages.Auth.SignUpModel
@using System.Data
@using HouseRentalAPI;
@{
    Layout = "_Layout";
    string url_basic = Url.Content("~/");
}

<!-- Header Strip -->
<div class="auth-header"></div>

<div class="auth-container">
    <h2>Create Account</h2>
    <p class="text-muted mb-4">Sign up to start listing or renting properties</p>

    <!-- Role Selection -->
    <div class="role-selection d-flex justify-content-between mb-4">
        <div id="tenantRole" class="role-card active text-center flex-fill me-2" onclick="selectRole('tenant')">
            <i class="bi bi-person"></i>
            <h6 class="fw-semibold mt-1 mb-0">Tenant</h6>
            <small class="text-muted">Looking for rentals</small>
        </div>
        <div id="ownerRole" class="role-card text-center flex-fill ms-2" onclick="selectRole('owner')">
            <i class="bi bi-building"></i>
            <h6 class="fw-semibold mt-1 mb-0">Owner</h6>
            <small class="text-muted">List properties</small>
        </div>
    </div>

    <form method="post" id="signUpForm" class="auth-form">
        <input type="hidden" id="UserRole" name="UserRole" value="tenant" />

        <div class="row g-2">
            <div class="col-md-6">
                <input type="text" class="form-control" id="fname" placeholder="First Name" required />
            </div>

            <div class="col-md-6">
                <input type="text" class="form-control" id="lname" placeholder="Last Name" required />
            </div>

            <div class="col-md-6">
                <input type="number" class="form-control" id="phone" placeholder="Phone" required />
            </div>

            <div class="col-md-6">
                <input type="email" class="form-control" id="email" placeholder="Email" required />
            </div>

            <div class="col-md-6">
                <input type="text" class="form-control" id="address" placeholder="Address" required />
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" id="nidNo" placeholder="NID No" required />
            </div>

            <div class="col-md-6">
                <input type="password" class="form-control" id="passWord" placeholder="Password" required />
            </div>
            <div class="col-md-6">
                <input type="password" class="form-control" id="cpassWord" placeholder="Confirm Password" required />
            </div>
        </div>

        <button type="button" id="btnSignup" class="btn btn-gradient mt-3">Create Account</button>
    </form>

    <div class="auth-footer text-center mt-3">
        Already have an account? <a asp-page="/Auth/Login">Sign In</a>
    </div>
</div>

@section Scripts {
    <script src="/js/auth/AuthService.js"></script>
    <script src="/js/preloader.js"></script>
    <script type="text/javascript" asp-append-version="true">
        let basicurl="@url_basic";

        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("signUpForm");

            form.addEventListener("submit", function () {
                ShowLoader();
            });
        });
    </script>

}