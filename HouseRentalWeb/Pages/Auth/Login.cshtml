@page
@model HouseRentalWeb.Pages.Auth.LoginModel
@using System.Data
@using HouseRentalAPI;
@{
    Layout = "_Layout";
    string url_basic = Url.Content("~/");
}

<div class="auth-header"></div>

<div class="auth-container">
    <div class="auth-card">
        <h2>Sign In</h2>
        <p>Enter your credentials to access your account</p>

        <form method="post" onsubmit="return showLoading(this);">
            <div class="mb-3 text-start">
                <label class="form-label">Email</label>
                <input type="email" id="txtemail" class="form-control" placeholder="you@example.com" required />
            </div>

            <div class="mb-3 text-start">
                <label class="form-label">Password</label>
                <input type="password" id="txtpass" class="form-control" placeholder="••••••••" required />
            </div>

            <button type="button" id="btnLogIn" class="btn-gradient">Sign In</button>
        </form>

        <div class="auth-footer">
            Don’t have an account? <a href="/Auth/Signup">Sign up</a>
        </div>
    </div>
</div>
@section Scripts {
    <script  src="/js/auth/AuthService.js"></script>
    <script type="text/javascript" asp-append-version="true">
        let basicurl="@url_basic";

        function showLoading(form) {
            // Disable submit button
            const submitButton = form.querySelector('button[type="button"]');
            submitButton.disabled = true;

            // Show loading text
                 submitButton.innerHTML = `
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Please Wait...
        `;
            // Continue with form submission
            return true;
        }
    </script>

}